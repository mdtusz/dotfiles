#########################################
# Commands to run apps
alias sub='subl -s'
alias unarch='~/Applications/The\ Unarchiver.app/Contents/MacOS/The\ Unarchiver'
alias pms='python -m SimpleHTTPServer'

#########################################
# Commands to change dirs
alias to.downloads='cd ${MYDOWNLOADS}'
alias to.dropbox='cd ~/Dropbox'
alias to.docs='cd ${MYDOCUMENTS}'
alias to.sandbox='cd ${SANDBOX}'

#########################################
# Docker
alias dm=docker-machine
alias dicker=docker
alias dpsa='docker ps -a'
alias dc=docker-compose

#########################################
# Rust
alias cr='cargo run'
alias cb='cargo build'
alias ct='cargo test'

#############################
# Utilities

# Directory listings
alias ls='ls -G -h -p '
alias ll='ls -l -G -h -p '

# Navigation
alias ..='cd ..'
alias ...='cd .. && cd ..'
