# Shell functions

function manp() {
  man -t $1 | open -fa /Applications/Preview.app
}

function weather() {
  curl wttr.in/$1
}

function meteogram() {
  finger $1@graph.no
}

function showfiles() {
  defaults write com.apple.finder AppleShowAllFiles YES
  killall Finder
}

function hidefiles() {
  defaults write com.apple.finder AppleShowAllFiles NO
  killall Finder
}

function colorscheme() {
    RANDOM=$$$(date +%s)

    SCHEMES=($(ls -1 $HOME/.config/kitty/base16-kitty/colors))
    SCHEME=${SCHEMES[$RANDOM % ${#SCHEMES[@]}]}

    kitty @ set-colors --all --configured $HOME/.config/kitty/base16-kitty/colors/$SCHEME

    echo "Colorscheme set to $SCHEME."
}
