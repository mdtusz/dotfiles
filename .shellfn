#! /bin/sh
# Shell functions

weather() {
  curl "wttr.in/$1"
}

meteogram() {
  finger "$1@graph.no"
}

colorscheme() {
    NUM=$1

    SCHEMES=($(ls -1 "$HOME/.config/kitty/base16-kitty/colors"))

    while true
    do
        SCHEME="${SCHEMES[$NUM % ${#SCHEMES[@]}]}"
        kitty @ set-colors --all --configured "$HOME/.config/kitty/base16-kitty/colors/$SCHEME"
        echo "Colorscheme set to $SCHEME. ($NUM)"
        NUM=$((NUM + 1))
        sleep 1
    done
}

spinfo() {
    ALBUM_ART=$(playerctl metadata mpris:artUrl)
    ARTIST=$(playerctl metadata xesam:artist)
    ALBUM=$(playerctl metadata xesam:album)
    TITLE=$(playerctl metadata xesam:title)
    icat "$ALBUM_ART"
    echo "$TITLE"
    echo "$ALBUM"
    echo "$ARTIST"
    iclear 3
    clear
}

iclear() {
    SLEEP=${1:-0}
    sleep "$SLEEP"
    kitty +kitten icat --clear
}

icat() {
    kitty +kitten icat --align left "$1"
}
