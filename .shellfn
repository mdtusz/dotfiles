# Shell functions

function manp() {
  man -t $1 | open -fa /Applications/Preview.app
}

function dmc() {
  if [[ "$#" != 1 ]]; then
    echo "DMC needs an argument to run."
  else
    eval "$(docker-machine env $1)"
  fi
}

function weather() {
  curl wttr.in/$1
}

function meteogram() {
  finger $1@graph.no
}

function showfiles() {
  defaults write com.apple.finder AppleShowAllFiles YES
  killall Finder
}

function hidefiles() {
  defaults write com.apple.finder AppleShowAllFiles NO
  killall Finder
}
