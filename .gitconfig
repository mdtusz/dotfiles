[push]
	default = simple

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[advice]
    statusHints = true

[core]
	editor = subl -w

[alias]
	co = checkout
	d = diff --color-words
	cam = commit -a -m
